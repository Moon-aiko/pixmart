<section class="faq">
  <div class="faq__container">
    <div class="faq__left">
      <p class="subtitle">F.A.Q</p>
      <h2 class="faq__title">Answers to Your Questions</h2>
      <button class="button button--secondary button--large">
        Ask Us A Question
      </button>
    </div>
    <div class="faq__content">
      <div class="faq__glow"></div>
      {% for faq in faqs %}
      <details class="accordion">
        <summary class="accordion__header">
          {{ faq.question }}
          <button class="accordion__toggle" aria-label="Toggle">
            <svg class="accordion__icon">
              <use href="/img/sprite.svg#arrow"></use>
            </svg>
          </button>
        </summary>
        <p class="accordion__content">{{ faq.answer }}</p>
      </details>
      {% endfor %}
    </div>
  </div>
</section>
