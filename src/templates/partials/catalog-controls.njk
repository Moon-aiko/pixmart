<div class="filters">
  <input
    type="checkbox"
    id="filters_toggle"
    class="filters__toggle visibility-hidden"
  />
  <div class="catalog-controls">
    <div class="catalog-controls__container">
      <div class="catalog-controls__sort">
        <label for="sort_select" class="visually-hidden">Sort by</label>
        <select
          id="sort_select"
          class="sort__select"
          aria-label="Sort products"
        >
          <option value="best">Best Seller</option>
          <option value="new">Newest</option>
          <option value="price_asc">Price: Low to High</option>
          <option value="price_desc">Price: High to Low</option>
        </select>
      </div>

      <label
        for="filters_toggle"
        class="button button--primary button--icon-medium"
        aria-label="Toggle filters"
      >
        <svg class="icon icon--filter">
          <use href="/img/sprite.svg#filter-lines"></use>
        </svg>
      </label>
    </div>

    <div class="catalog-controls__view-toggle">
      <p class="catalog-controls__text">Showing 12 out of 120 results.</p>
      <button
        class="button button--primary button--icon-medium"
        aria-label="Grid view"
      >
        <svg class="icon icon--grid">
          <use href="/img/sprite.svg#grid"></use>
        </svg>
      </button>
      <button
        class="button button--secondary button--icon-medium"
        aria-label="List view"
      >
        <svg class="icon icon--list">
          <use href="/img/sprite.svg#list"></use>
        </svg>
      </button>
    </div>
  </div>

  {% if activeFilters.length %}
  <div class="active-filters">
    {% for filter in activeFilters %}
    <button class="filter-tag" aria-label="Remove filter {{ filter.label }}">
      {{ filter.label }}
      <span class="filter-tag__remove" aria-hidden="true">&times;</span>
    </button>
    {% endfor %}
  </div>
  {% endif %}
  <div class="filters__panel">
    <div class="filters__header">
      <h2 class="main-title main-title--h2">Filters</h2>
      <label
        for="filters_toggle"
        class="button button--secondary button--icon-medium"
      >
        <svg class="icon icon--close">
          <use href="/img/sprite.svg#close"></use>
        </svg>
      </label>
    </div>
    {% include "partials/catalog-filters.njk" %}
  </div>
</div>
