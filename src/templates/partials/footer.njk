<footer class="footer">
  <div class="footer__container">
    <div class="footer__top">
      <div class="footer__info">
        <a href="/" class="footer__logo">
          <svg class="icon icon--footer-logo">
            <use href="img/sprite.svg#logo"></use>
          </svg>
        </a>
        <p class="footer__description">{{ footer.text }}</p>
      </div>

      <div class="footer__nav">
        {% for section in footer.navSections %}
        <div class="footer-nav__section">
          <h2 class="footer-nav__title">{{ section.title }}</h2>
          <ul class="footer-nav__list">
            {% for item in section.links %}
            <li class="footer-nav__item">
              <a href="{{ item.url }}" class="footer-nav__link">{{
                item.label
              }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="footer__middle">
      <div class="footer__socials">
        {% for social in footer.socials %}
        <a
          href="{{ social.url }}"
          class="button button--secondary button__icon-large socials__link"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="icon icon--{{ social.icon }}">
            <use href="img/sprite.svg#{{ social.icon }}"></use>
          </svg>
        </a>
        {% endfor %}
      </div>

      <div class="footer__subscribe">
        <h4 class="footer__subscribe-title">{{ footer.subscribeTitle }}</h4>
        <div class="footer__subscribe-action">
          <form
            class="form-field footer__subscribe-form"
            action="#"
            method="post"
          >
            <input
              type="email"
              class="input__email form-field__input"
              placeholder="Enter your email address ..."
              required
            />
          </form>
          <button
            type="submit"
            class="button button--primary button--large"
            form="subscribe-form"
          >
            {{ footer.subscribeButton }}
          </button>
        </div>
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__links">
        {% for link in footer.bottomLinks %}
        <a
          href="{{ link.url }}"
          class="footer__bottom-link{% if not loop.last %} footer__bottom-link--with-divider{% endif %}"
        >
          {{ link.label }}
        </a>
        {% endfor %}
      </div>
      <p class="footer__copyright">
        {{ footer.copyright }}
      </p>
    </div>
  </div>
</footer>
