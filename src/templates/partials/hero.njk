<section class="hero">
  <div class="hero__inner">
    <div class="hero__images">
      {% for image in hero.images %}
      <picture class="hero__picture hero__picture--{{ image.area }}">
        <source
          srcset="/img/{{ image.desktop }}-1x.webp, /img/{{ image.desktop }}-2x.webp 2x"
          media="(min-width: 1440px)"
          type="image/webp"
        />
        <source
          srcset="/img/{{ image.tablet }}-1x.webp, /img/{{ image.tablet }}-2x.webp 2x"
          media="(min-width: 1024px)"
          type="image/webp"
        />
        <img
          src="{{ image.mobile }}"
          srcset="/img/{{ image.mobile}}-1x.webp, /img/{{ image.mobile }}-2x.webp 2x"
          alt="{{ image.alt }}"
          class="hero__image"
        />
      </picture>
      {% endfor %}
      <div class="hero__icon-wrapper hero__icon-wrapper--top">
        <svg class="icon__hero">
          <use href="/img/sprite.svg#{{ hero.icons.top }}"></use>
        </svg>
      </div>
      <div class="hero__icon-wrapper hero__icon-wrapper--bottom">
        <svg class="icon__hero">
          <use href="/img/sprite.svg#{{ hero.icons.bottom }}"></use>
        </svg>
      </div>
    </div>

    <div class="hero__content">
      <h1 class="main-title main-title--h1">
        {{ hero.titleLine1 }}<br />
        {{ hero.titleLine2 }}<br />
        {{ hero.titleStart3 }}
        <span class="highlight">{{ hero.titleAccent }}</span>
        {{ hero.titleEnd3 }}
      </h1>
      <p class="hero__description">{{ hero.description }}</p>
      <div class="hero__actions">
        <a
          href="{{ hero.buttons[0].url }}"
          class="button button--primary button--large"
        >
          {{ hero.buttons[0].text }}
        </a>
        <a
          href="{{ hero.buttons[1].url }}"
          class="button button--ghost button--large"
        >
          <svg class="icon icon--play">
            <use href="/img/sprite.svg#play"></use>
          </svg>
          {{ hero.buttons[1].text }}
        </a>
      </div>
    </div>
  </div>
</section>
