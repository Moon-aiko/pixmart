<section class="article__content">
  {% for block in article.content %}
    {% if block.type == "paragraph" %}
      <p class="article__paragraph">{{ block.text }}</p>
    
    {% elif block.type == "heading" %}
      <h{{ block.level }} class="article__heading article__heading--h{{ block.level }}">
        {{ block.text }}
      </h{{ block.level }}>

    {% if block.type == "picture" %}
  <figure class="article-content__image-block">
    <picture class="article-content__picture">
      <source
        srcset="/img/{{ block.src.desktop }}-1x.webp, /img/{{ block.src.desktop }}-2x.webp 2x"
        media="(min-width: 1440px)"
        type="image/webp"
      />
      <source
        srcset="/img/{{ block.src.tablet }}-1x.webp, /img/{{ block.src.tablet }}-2x.webp 2x"
        media="(min-width: 1024px)"
        type="image/webp"
      />
      <img
        src="/img/{{ block.src.mobile }}-1x.webp"
        srcset="/img/{{ block.src.mobile }}-1x.webp, /img/{{ block.src.mobile }}-2x.webp 2x"
        alt="{{ block.alt }}"
        class="article-content__image"
      />
    </picture>
    <figcaption class="article-content__caption">
      {{ block.caption }}
      {% if block.link %}
        <a href="{{ block.link.url }}" class="article-content__link">{{ block.link.text }}</a>
      {% endif %}
    </figcaption>
  </figure>
{% endif %}


    {% elif block.type == "quote" %}
      <blockquote class="article-content__quote">
        {{ block.text }}
      </blockquote>
    {% endif %}
  {% endfor %}
</section>
